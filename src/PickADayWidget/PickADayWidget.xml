<?xml version="1.0" encoding="utf-8" ?>
<widget id="PickADayWidget.widget.PickADayWidget" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>PickADayWidget</name>
    <description>The description of this widget.</description>

    <icon></icon>

    <properties>
        <!-- DATA SOURCE -->
        <property key="dateAttr" type="attribute" required="true">
            <caption>Date Attribute</caption>
            <category>Data Source</category>
            <description>Attribute</description>
            <attributeTypes>
                <attributeType name="DateTime" />
            </attributeTypes>
        </property>
        <property key="dateFormat" type="string" required="true" defaultValue="MM\DD\YYYY">
            <caption>Date format</caption>
            <category>Data Source</category>
            <description>This is the date format that the widget uses (formatting comes from Moment.js). Note: this is different from the placeholder used in Appearance</description>
        </property>
        <!-- CALENDAR MODE -->
        <!-- to be implemented -->
        <!-- APPEARANCE -->
        <property key="showButton" type="boolean" defaultValue="true">
            <caption>Show button</caption>
            <category>Appearance</category>
            <description>Show a button next to the text-field</description>
        </property>
        <property key="buttonClass" type="string" required="true" defaultValue="calendar">
            <caption>Button Class</caption>
            <category>Appearance</category>
            <description>Glyphicon button class. The icon has class "glyphicon glyphicon-" and this class Name</description>
        </property>
        <property key="placeholderText" type="string" required="false" defaultValue="MM\DD\YYYY">
            <caption>Placeholder</caption>
            <category>Appearance</category>
            <description>Placeholder text used in the input field</description>
        </property>
    </properties>
</widget>
